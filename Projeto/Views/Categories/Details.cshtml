@model Projeto.Models.Categories

@{
    ViewData["Title"] = "Details";
}
<head>
    <link rel="stylesheet" href=https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css>

</head>
<style>

    h1 {
        font-family: Brush Script MT;
        font-size: 50px;
        color: #8EAADB;
    }

    .primaryBtn {
        padding: 10px;
        text-align: center;
        margin: 4px 2px;
        border-radius: 8px;
        color: #ffffff;
        background-color: #b4c7e7;
        border-color: #b4c7e7;
    }


    .textA {
        color: #858282;
        text-decoration: none;
    }
</style>

<h1>Detalhes</h1>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>

<div>
   
    <button class="btn btn-outline-secondary" onclick="window.location.href='@Url.Action("Edit", new { id = Model?.CategoryId })'">
        <i class="fas fa-pencil-alt"></i> Editar
    </button> |

    <button class="btn btn-outline-secondary" onclick="window.location.href='@Url.Action("Index")'"><i class="fa fa-arrow-left"></i> Voltar à lista</button>

</div>
