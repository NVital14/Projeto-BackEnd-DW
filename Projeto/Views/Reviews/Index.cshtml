@model IEnumerable<Projeto.Models.Reviews>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href=https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css>

</head>


<h1 style="margin-top:20px;">Reviews</h1>

<p>
    <a asp-action="Create">Criar nova Review</a>
</p>
<div class="container" style="margin-top: 50px;">
    <div class="row">

        @{
            int count = 0;
            foreach (var item in Model) {
                if (count != 0 && count % 3 == 0) {
                    @:</div><div class="row">
                }
                <div class="col">
                    <div class="col-sm">
            <div class="card border-light mb-3" style="max-width: 18rem; height: 410px;">
                <div class="card-header"> <b><center>@Html.DisplayFor(modelItem => item.Title)</center></b></div>
                <div class="card-body">
                    @if (item.Image != null)
                    {
                        <center>
                        <img src="~/Imagens/@Html.DisplayFor(modelItem => item.Image)"
                             title="@Html.DisplayFor(modelItem => item.Title)"
                             width="125px"  max-height="100px"/>
                        </center>
                        <br />
                    }
                    <h6>Rating:  @for (int i = 0; i < item.Rating; i++)
                {
                    <i class="fa fa-star" aria-hidden="true" style="color: gold;"></i>
                }
                @if (item.Rating < 5)
                {
                    @for (int i = item.Rating; i < 5; i++)
                    {
                        <i class="fa fa-star" aria-hidden="true" style="color: lightgrey;"></i>
                    }
                }
                    </h6>
                    <h6>Categoria: @Html.DisplayFor(modelItem => item.Category.Name)</h6>
                    <h6>
                        Partilhado:  @if (item.IsShared == true)
                        {
                            <span>Sim</span>
                        }
                        else
                        {
                            <span>Não</span>
                        }
                    </h6>
                  
                </div>
                <div class="card-footer bg-transparent border-success" >
                <center>
                    @*<button class="btn btn-outline-info" onclick="window.location.href='@Url.Action("Edit", new { id = item.ReviewId })'"><i class="far fa-edit" aria-hidden="true"></i></button>
                    <button class="btn btn-outline-success" onclick="window.location.href='@Url.Action("Details", new { id = item.ReviewId })'"><i class="fa fa-info-circle" aria-hidden="true"></i></button>
                    <button class="btn btn-outline-danger" onclick="window.location.href='@Url.Action("Delete", new { id = item.ReviewId })'"> <i class="fa fa-trash" aria-hidden="true"></i></button>+*@
                    <a asp-action="Edit" asp-route-id="@item.ReviewId"><i class="far fa-edit" aria-hidden="true" style="color: steelblue;"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.ReviewId" asp-route-source="indexReviews"><i class="fa fa-info-circle" aria-hidden="true" style="color: seagreen;"></i></a> |
                     <a asp-action="Delete" asp-route-id="@item.ReviewId"><i class="fa fa-trash" aria-hidden="true" style="color: red;"></i></a>
                </center>
                </div>
            </div>
            </div>
                </div>
                count++;
            }
        }
